<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvThread1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thread 1" />

    <Button
        android:id="@+id/btnThread1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop" />

    <TextView
        android:id="@+id/tvThread2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thread 2" />

    <Button
        android:id="@+id/btnThread2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop" />

    <TextView
        android:id="@+id/tvThread3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thread 3" />

    <Button
        android:id="@+id/btnThread3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" />
</LinearLayout>
